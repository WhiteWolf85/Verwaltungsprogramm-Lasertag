public class Spieler implements SpielerInterface {

        private String name;
        private int age;
        private String nickName;
        private String team;
        private int gameCounter = 0;
        private String role;
        private String status;


        private int dealtHits;
        private int receivedHits;
        private double ratio = (double) dealtHits / receivedHits;


    //Constructor
    public Spieler(String name, int age, String nickName, String team, String role, String status){
        this.name = name;
        this.age = age;
        this.nickName = nickName;
        this.team = team;
        this.role = role;
        this.status = status;
    }

    public void insertScore(int dH, int rH){    //use after a game session
        this.dealtHits = dealtHits + dH;
        this.receivedHits = receivedHits + rH;
        this.ratio = (double) this.dealtHits / this.receivedHits;
        gameCounter++;
    }

    public String getScore(){return "Overall dealt hits:" + dealtHits + "Overall received hits:" + receivedHits;}
    public double getRatio(){return ratio;}
    public int getGames() {return gameCounter;}
    public String getRole() {return role;}
    public String getStatus(){return status;}
    public void setStatus(String status){this.status = status;}
    public void setRole(String role){this.role = role;}



}
